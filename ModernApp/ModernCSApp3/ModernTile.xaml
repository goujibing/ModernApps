        		<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:5" Value="1.45"/>
        		<EasingDoubleKeyFrame KeyTime="0:0:23" Value="1.45"/>
