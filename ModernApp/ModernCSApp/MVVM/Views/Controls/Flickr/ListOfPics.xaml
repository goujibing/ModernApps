<dmxv:BaseUserControl
    x:Class="ModernCSApp.Views.Controls.Flickr.ListOfPics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lc="using:ModernCSApp.Views.Controls"
    xmlns:dmxv="using:ModernCSApp.Views"
    xmlns:dmxlc="using:ModernCSApp.Views.Controls"
    xmlns:jsc="using:SumoNinjaMonkey.Framework.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="120"
    d:DesignWidth="350">
	<dmxv:BaseUserControl.Resources>
		
		<DataTemplate x:Key="dtPicItem">
			<Grid>
				<Image  HorizontalAlignment="Left" VerticalAlignment="Top" Source="{Binding SmallUrl}" Width="180" Height="180" Stretch="UniformToFill" />
                <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Black">
                    <TextBlock Text="{Binding Title}" Margin="5" MaxWidth="150" />
                </Grid>
                
			</Grid>
		</DataTemplate>
		
	</dmxv:BaseUserControl.Resources>
    <Grid x:Name="layoutRoot" >
       <GridView x:Name="gvMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemTemplate="{StaticResource dtPicItem}" Margin="15" ScrollViewer.HorizontalScrollBarVisibility="Hidden" />
    </Grid>
</dmxv:BaseUserControl>
